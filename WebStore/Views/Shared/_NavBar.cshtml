@inject SignInManager<User> signInManager

<header>
    <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-light bg-white border-bottom box-shadow mb-3">
        
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/shoelogo-sm.png" width="45" height="30" class="d-inline-block align-top" alt="">
                WebStore
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index">Sklep</a>
                    </li>


                    <li class="nav-item dropdown text-dark">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Zarządzaj
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Administration" asp-action="Index">Użytkownikami</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Administration" asp-action="ListRoles">Rolami</a>

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="Index">Produktami</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="AddBrand">Dodaj brand</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="AddColor">Dodaj kolor</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="AddProduct">Dodaj produkt</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="AddSize">Dodaj rozmiar</a>
                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="AddType">Dodaj typ</a>



                        </div>
                    </li>





                    <li class="nav-item">
                        <a href="/swagger" class="nav-link text-dark">Swagger</a>
                    </li>



                </ul>

                <ul class="navbar-nav mr-auto">

                    @if (signInManager.IsSignedIn(User))
                    {

                        <li class="nav-item dropdown text-dark">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="MyProfile">Mój profil</a>
                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="OrdersHistrory">Historia zamówień</a>

                                <div class="dropdown-divider"></div>

                                <form class="nav-link text-dark" method="post" asp-action="Logout" asp-controller="Account">
                                    <button type="submit" class="nav-link btn btn-link py-0 dropdown-item text-dark">
                                        Wyloguj
                                    </button>
                                </form>

                            </div>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Zaloguj</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj</a>
                        </li>
                    }



                </ul>
            </div>
        </div>
    </nav>





</header>


