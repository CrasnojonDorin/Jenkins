@model WebStore.ViewModels.ProductViewModels.BrandFormViewModel

@{
    ViewData["Title"] = "Formularz brandu";
}
<h1 class="font-weight-light">Dodaj nowy brand</h1>
<hr />
<br />

<form enctype="multipart/form-data" asp-controller="Product" asp-action="AddBrand" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-row">

        <div class="form-group col-md-3">

            @Html.LabelFor(b => b.Name)
            @Html.TextBoxFor(b => b.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(b => b.Name)
        </div>

        <div class="col-md-2"></div>

        <div class="form-group col-md-3">

            @Html.LabelFor(p => p.Photo)
            <div class="custom-file">
                <input asp-for="Photo" class="custom-file-input" id="inputGroupFile01"
                       aria-describedby="inputGroupFileAddon01"/>
                <label class="custom-file-label" for="inputGroupFile01">Wybierz plik</label>
            </div>
            @Html.ValidationMessageFor(p => p.Photo)
        </div>
    </div>
    <br/>
    <div class="form-row">


        <div class="form-group col-md-6">

            @Html.LabelFor(b => b.Description)
            @Html.TextAreaFor(b => b.Description, new {@class = "form-control"})
            @Html.ValidationMessageFor(b => b.Description)
        </div>
    </div>

    <br/>
    <br/>

    <button type="submit" class="btn btn-primary ">Dodaj</button>

</form>




@section Scripts{

    <script>
        //Pokazuje nazwe wgranego pliku
        $(document).ready(function () {
            $('.custom-file-input').on("change",
                function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
        });
    </script>
}